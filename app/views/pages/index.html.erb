<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">

    <div ng-app="app">
      <div ng-controller="foodsCtrl" ng-init="setup()">
        <div>
          <datalist id="names">
            <option ng-repeat="food in foods">{{food.ingredient}} - {{food.spice}} - {{food.measurement}}</option>
          </datalist>
        </div>
        <div class="form-group">
        Filter Foods: <input ng-model="filterQuery" list="names" class="form-control">
        </div>
        <h1>Number of Foods: {{foods.length}}</h1>
        <table class="table">
          <tr>
            <th ng-click="toggleOrder('id')">ID</th>
            <th ng-click="toggleOrder('ingredient')">Ingredient</th>
            <th ng-click="toggleOrder('spice')">Spice</th>
            <th ng-click="toggleOrder('measurement')">Measurement</th>
            <th>Update Food</th>
            <th>Delete Food</th>
          </tr>
          <tr ng-repeat="food in foods | filter: filterQuery | orderBy: orderAttribute:descending">
            <td>{{food.id}}</td>
            <td>{{food.ingredient}}</td>
            <td>{{food.spice}}</td>
            <td>{{food.measurement}}</td>
            <td>
              Ingredient: <input ng-model="food.ingredient" ng-keyup="updateFood(food)"><br>
              Spice: <input ng-model="food.spice" ng-keyup="updateFood(food)"><br>
              Measurement: <input ng-model="food.measurement" ng-keyup="updateFood(food)">
            </td>
            <td><button ng-click="deleteFood(food, $index)">Delete</button></td>
          </tr>

        </table>

        <div>Add Food</div>
        <div class="form-group">
          Ingredient: <input ng-model="foodIngredient">
        </div>
        <div class="form-group">
          Spice: <input ng-model="foodSpice">
        </div>
        <div class="form-group">
          Measurement: <input ng-model="foodMeasurement">
        </div>
          <button ng-click="addFood(foodIngredient, foodSpice, foodMeasurement)">Add Food</button>
      </div>
    </div>
  </div>
</div>